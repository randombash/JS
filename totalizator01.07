var iloscLiczb = 6;                     // ilośc liczb do wylosowania
var liczbaMin = 1;                      // minimalna losowana liczba
var liczbaMax = 49;                     // maksymalna losowana liczba
var powtarzanie = false;                 // czy liczby mogą się powtarzać
var wynik = [];                         // zbiór wylosowanych liczb w losowej kolejności
var liczba = '';                        // wylosowana liczba
var znalezione = '';
var blad = 'Nie można wylosować liczb w podanym zakresie';
var dlugosc = wynik.length;



function wylicz() {                     // generuje losową liczbę w podanym zakresie
	    liczba = Math.round(Math.random() * liczbaMax) + liczbaMin; 
	    return liczba
	    }
	    
function warunekLogiczny(powtarzanie, iloscLiczb, liczbaMax, liczbaMin, dlugosc) {
        dlugosc = wynik.length;
        if (powtarzanie == false && iloscLiczb > (liczbaMax - liczbaMin)) {
            return true;
        } else if (dlugosc < iloscLiczb) {
            return false;
        } else {
            return true;
        }
    
}

	do {
     
     dlugosc = wynik.length;
     wylicz();                          // sprawdzić continue, spr czy do się aktualizuje na różnych etapach
     warunekLogiczny(powtarzanie, iloscLiczb, liczbaMax, liczbaMin, dlugosc);

    for (var i = 0; i <= wynik.length; i++) {   // pętla sprawdzajca powtarzanie liczb w wyniku
        if (wynik[i] == liczba) {
            znalezione = true;
            break;
    } 
    }                                     // powrót do pętli do
    if (powtarzanie == false && iloscLiczb > (liczbaMax - liczbaMin)) {
        wynik.push(blad);
   } else if (powtarzanie == false && znalezione != true) {
       wynik.push(liczba);
   } else if (powtarzanie == true) {
       wynik.push(liczba);
   } else {
       continue;
   } 
} while (warunekLogiczny(powtarzanie, iloscLiczb, liczbaMax, liczbaMin, dlugosc) == false);

